        <div class="card-trip-infos">
          <div>
            <%= link_to "Add a cocktail",  new_cocktail_path, class: 'btn btn-success'  %>
            <%= link_to cocktail.name, cocktail_path(cocktail), class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

